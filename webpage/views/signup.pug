//- variables: username, password, confirm_password, messages

doctype html
html
	head
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
		style
			include styles/signup.css
		title Signup
	body
		a(class='btn btn-default' href='/') HOME
		h1 Signup here!
		form(action='/signup' method='POST')
			label(for='username') Username: <br>
			input(type='text', placeholder='username' name='username' value=username)
			|	<br>
			label(for='password') Password: <br>
			input(type='password', placeholder='password' name='password' value=password)
			| <br>
			label(for='confirm_password') Confirm Password: <br>
			input(type='password', placeholder='password' name='confirm_password' value=confirm_password)
			| <br>
			button(class='btn btn-default' type='submit') Sign up
		| Already have an account? 
		a(class='btn btn-default' href='/login') Login
		ul(id='messages')
			each item in messages
				li= item