doctype html
html
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(name="description" content="botbuilder-manage")
		meta(name="author" content="Daniel Ho")
		//- font awesome
		link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous")
		//- bootstrap
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
		link(rel="stylesheet" href="vis/dist/vis.css" type="text/css")
		link(rel="stylesheet" href="styles/manage.css" type="text/css")
		title= name
	body(onload="init()")
		//- Navigation
		nav#main-nav.navbar.navbar-default.navbar-custom.navbar-fixed-top
			.container-fluid
				//- for mobile display
				.navbar-header
					button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navbar-collapse-id")
						span.sr-only Toggle Navigation
						i.fa.fa-bars.fa-lg
					a.navbar-brand(href="/profile")
						.list-inline
							img#logo(src="images/logo.png")
							| BotBuilder
				//- buttons
				#navbar-collapse-id.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li
							a(href="/profile") Home
						li
							a(href="/") Options
						li
							a(href="/") Other
		#graph-popUp
			span#operation node
			| <br>
			table(style="margin:auto")
				tr
					td id
					td
						input#node-id(value="new value")
				tr
					td label
					td
						input#node-label(value="new value")
			input#saveButton(type="button" value="save")
			input#cancelButton(type="button" value="cancel")
		#graph

