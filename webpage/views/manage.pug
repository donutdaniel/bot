			//- for mobile display
			.navbar-header
				button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navbar-collapse-id")
					span.sr-only Toggle Navigation
					i.fa.fa-bars.fa-lg
				a.navbar-brand(href="/profile")
					.list-inline
						img#logo(src="images/favicon.png")
						| BotBuilder
			//- buttons
			#navbar-collapse-id.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href="/profile") Home
					li
						a(href="/") Options
					li
						a(href="/") Other
